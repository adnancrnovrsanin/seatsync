<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <!-- Set root to INFO, but enable DEBUG for our packages -->
  <root level="INFO">
    <appender-ref ref="STDOUT" />
  </root>

  <logger name="com.adnan.seatsync" level="DEBUG"/>
  <logger name="KafkaConsumer" level="DEBUG"/>
  <logger name="org.testcontainers" level="INFO"/>
</configuration>
